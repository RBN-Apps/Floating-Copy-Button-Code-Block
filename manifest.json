{
  "manifest_version": 3,
  "name": "Gemini Sticky Code Header",
  "version": "1.0.2",
  "description": "Makes the header of code blocks on Gemini and AI Studio sticky, so the copy button is always visible.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_title": "Gemini Sticky Code Header"
  }
}